            {{ quizz.titre }} : {{ quizz.reponse1 }},
            {{ quizz.reponse2 }}, {{ quizz.reponse3 }}, {{ quizz.reponse4 }}<br><br>
        {endfor %}

       {{ dump(Quizz) }}#}

</div>

{% endblock %}
